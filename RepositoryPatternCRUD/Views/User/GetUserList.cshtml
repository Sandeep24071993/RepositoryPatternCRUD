@model IEnumerable<RepositoryPatternCRUD.Models.User>
@{
    ViewData["Title"] = "GetUserList";
}


<div class="container">
    <div class="row">
        @{
            if (TempData["usererror"]!= null)
            {
                <div class="alert alert-danger notification text-center">
                    @TempData["usererror"]
                </div>
            }
            if (TempData["success"] != null)
            {
                <div class="alert alert-success notification text-center">
                    @TempData["success"] 
                </div>
            }
        }
        <div class="col-10 offset-1">
            <div class="text-end"> 
                <a class="btn btn-sm btn-primary p-2 m-2" asp-action="AddUser" asp-controller="User">Add User</a>
            </div>
            <table class="table table-hover table-striped table-bordered">
                <thead class="text-center bg-dark text-light">
                    <tr>
                        <th>UserId</th>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Email</th>
                        <th>PinCode</th>
                        <th>IsActive</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.UserId</td>
                            <td>@item.Name</td>
                            <td>@item.Gender</td>
                            <td>@item.Email</td>
                            <td>@item.PinCode</td>
                            <td>
                                @* @if(@item.IsActive)
                                {
                                    <input type="checkbox" value="@item.IsActive" checked="checked" disabled />
                                }
                                else
                                {
                                <input type="checkbox" value="@item.IsActive" disabled />
                                } *@

                                @* <input type="checkbox" disabled @(item.IsActive ? "checked" : "") /> *@
                                <input type="checkbox" disabled @(item.IsActive ? "checked" : "") />
                            
                            </td>
                            <td>
                                <a class="btn btn-sm btn-warning m-1" asp-controller="User" asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                                <a class="btn btn-sm btn-info m-1" asp-controller="User" asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                                <a class="btn btn-sm btn-danger m-1" asp-controller="User" asp-action="DeleteRecards" asp-route-id="@item.UserId" onclick="return confirm('Are you Sure,You want to delete this recard')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>